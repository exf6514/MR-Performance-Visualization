<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:local="clr-namespace:MR_Performance_Visualization.Skins"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">
    <SolidColorBrush x:Key="Main_App_Color" Color="HotPink"/>
    
    <SolidColorBrush x:Key="Side_Bar_Color" Color="#FF222222"/>
    <SolidColorBrush x:Key="Menu_Color" Color="#FFEEEEEE"/>
    <SolidColorBrush x:Key="Main_Content_Color" Color="White"/>
    <SolidColorBrush x:Key="Main_Text_Color" Color="Black"/>
    <SolidColorBrush x:Key="Menu_Icon_Color" Color="Gray"/>

    <FontFamily x:Key="Main_App_Font_Family">Segoe UI</FontFamily>
    <sys:Double x:Key="Main_App_Font_Size_Smallest">7</sys:Double>
    <sys:Double x:Key="Main_App_Font_Size_Small">10</sys:Double>
    <sys:Double x:Key="Main_App_Font_Size_Normal">12</sys:Double>
    <sys:Double x:Key="Main_App_Font_Size_Big">16</sys:Double>
    <sys:Double x:Key="Main_App_Font_Size_Biggest">26</sys:Double>

    <Style x:Key="Flat">
        <Setter Property="Control.Background" Value="{x:Null}" />
        <Setter Property="Control.BorderBrush" Value="{x:Null}" />
        <Style.Triggers>
            <Trigger Property="Control.IsMouseOver" Value="True">
                <Setter Property="Control.Background" Value="{x:Null}" />
                <Setter Property="Control.BorderBrush" Value="{x:Null}" />
                <Setter Property="Control.FontWeight" Value="Bold" />
            </Trigger>
            <Trigger Property="Control.IsFocused" Value="True">
                <Setter Property="Control.FontWeight" Value="Bold" />
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>